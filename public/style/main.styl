// main.styl

grey = #f6f6f6
purple = #7f00ff
black = #333
radius = 5px

transition()
  transition arguments
  -webkit-transition arguments
  -o-transition arguments
  -moz-transition arguments

*
  padding 0
  margin 0
  font-weight 100
  color black

a
  text-decoration none
  color black
  &:hover
    color purple

body
  background grey
  min-width 400px
  font-size 20px
  font-family "Raleway", helvetica

input
  background grey
  font-size 20px
  outline none
  border 1px solid black
  border-radius radius
  padding 5px
  display block
  margin auto
  margin-top 10px
  color: black
  font-family "Roboto", helvetica

  &:focus
    border 1px solid purple

nav
  text-align right
  padding-right 14px


  li
    font-family "Open Sans", courier
    display inline-block
    position relative
    padding-top 14px
    padding-left 20px


  li:first-child
    float left


#first_search
  width 50%
  font-size 40px
  margin-top 20px
  padding 20px 25px
  border 1px solid purple
  color black

  input_grey = #bbb

  &::-webkit-input-placeholder { /* WebKit browsers */
    color:    input_grey;
  }
  &:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
    color:    input_grey;
    opacity:  1;
  }
  &::-moz-placeholder { /* Mozilla Firefox 19+ */
    color:    input_grey;
    opacity:  1;
  }
  &:-ms-input-placeholder { /* Internet Explorer 10+ */
    color:    input_grey;
  }


ul
  margin-top 20px
  list-style none
  border 1px solid black
  border-radius radius
  width 50%
  margin auto
  margin-top 20px

  &.hidden-ul
    display none

  li.result
    position relative
    min-height 150px
    border-top 1px solid black
    clear both
    width 100%

    &.hidden_result
      display none

    &.no_border_result
      border-top none

    h2
      padding-top 20px
      padding-left 20px

    span
      padding-left 20px

    img
      height 100px
      position absolute
      right 20px
      top 20px


    &:first-child
      border-top none
