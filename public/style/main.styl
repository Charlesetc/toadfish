// main.styl

grey = #f6f6f6
purple = #7f00ff
black = #333
radius = 5px

transition()
  transition arguments
  -webkit-transition arguments
  -o-transition arguments
  -moz-transition arguments

*
  padding 0
  margin 0
  font-weight 100
  color black

a
  text-decoration none
  color black
  &:hover
    color purple

body
  background grey
  min-width 400px
  font-size 20px
  font-family "Raleway", helvetica

input
  background grey
  font-size 20px
  outline none
  border 1px solid black
  border-radius radius
  padding 5px
  display block
  margin auto
  margin-top 10px
  color: black
  font-family "Roboto", helvetica

  &:focus
    border 1px solid purple

nav
  text-align right
  padding-right 14px


  li
    font-family "Open Sans", courier
    display inline-block
    position relative
    padding-top 14px
    padding-left 20px


  li:first-child
    float left


#first_search
  width 50%
  font-size 40px
  margin-top 20px
  padding 20px 25px
  border 1px solid purple
  color black

  input_grey = #bbb

  &::-webkit-input-placeholder { /* WebKit browsers */
    color:    input_grey;
  }
  &:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
    color:    input_grey;
    opacity:  1;
  }
  &::-moz-placeholder { /* Mozilla Firefox 19+ */
    color:    input_grey;
    opacity:  1;
  }
  &:-ms-input-placeholder { /* Internet Explorer 10+ */
    color:    input_grey;
  }


ul
  margin-top 20px
  list-style none
  border 1px solid black
  border-radius radius
  width 50%
  margin auto
  margin-top 20px

  &.hidden-ul
    display none

  li
    border-top 1px solid black
    position relative
    top -1px

    &.seperator
      border-radius radius radius 0 0

    &:last-child // This might be a real problem
      display none

    &.seperator
      font-size 20px
      background-color lightpink
      text-transform capitalize 
      padding 10px

    &.result
      min-height 150px
      clear both
      width 100%

      &.hidden_result
        display none

      &.no_border_result
        border-top none

      h2
        padding-top 20px
        padding-left 30px
        max-width 70%
        box-sizing border-box
        font-size 20px

      span
        padding-left 30px
        font-size 16px

      img
        max-height 100px
        position absolute
        right 20px
        top 20px

      .add_to_playlist 
        margin 15px 30px
        border none
        outline none
        color purple
        background rgba(255,255,255,0)
        font-size 14
        transition color 0.3s, background 0.3s
        &:hover
          color white
          background purple

